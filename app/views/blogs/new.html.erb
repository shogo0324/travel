<%= form_with(model: @blog, local: true) do |form| %>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="title">
    <%= form.label :場所 %>
    <%= form.text_field :title %>
  </div>

    <div class="time">
    <%= form.label :行った日時 %>
    <%= form.datetime_select :start_time %>
  </div>
  
  <div class="content">
    <%= form.label :説明 %>
    <%= form.text_field :content %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>