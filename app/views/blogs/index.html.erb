<p id="notice"><%= notice %></p>
<h1>カレンダー</h1>
<table>
  <thead>
    <tr>
      <th>場所</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<%= month_calendar events: @blogs do |date, blogs| %>
  <%= link_to date.day, blogs_table_path(date: date), class: "calendar-day-link" %>
<div class="a">
  <% blogs.each do |blog| %>
    <div>
      <%= link_to blog.title, blog_path(blog) %>
    </div>
  <% end %>
</div>
<% end %>
<br>
<%= link_to '投稿する', new_blog_path %>


<% if user_signed_in? %>
  <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>